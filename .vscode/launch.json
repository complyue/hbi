{
    "version": "0.2.0",
    "configurations": [
        {
            // :( delve not supporting TUI programs yet
            "name": "HBI interpreter - Go",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "env": {
                "GOMAXPROCS": "2"
            },
            "program": "${workspaceFolder}/cmd/hbii",
            "args": [
                "-v=3"
            ]
        },
        {
            "name": "Pretty Exports",
            "type": "python",
            "request": "launch",
            "env": {},
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/pretty-exports.py",
            "args": [],
            "console": "integratedTerminal"
        }
    ]
}